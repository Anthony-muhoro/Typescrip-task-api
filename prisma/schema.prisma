generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task{
  id String @id @default(uuid())
  title String @map("title")
  description String @map("description")
  isCompleted Boolean @map("is_completed") @default(false)
  @@map("task")
}
